@model IEnumerable<AssetManagementSystem.EntityModel.Designation>

@{
    ViewBag.Title = "Index";
    int sNo = 0;
}

<h3 style="color: #3c4c6a;"><b>Designation Lis</b></h3>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover border-color">
    <tr>
        <th>S.No</th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@Convert.ToInt32(++sNo)</td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedOn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ModifiedOn)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "badge bg-success" }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "badge bg-info text-dark" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "badge bg-danger" })
    </td>
</tr>
    }

</table>
